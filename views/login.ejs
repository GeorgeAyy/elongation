<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <!-- Your custom styles -->
    <link rel="stylesheet" href="../css/login.css" />
    <!-- Create a new CSS file for login styles -->
  </head>
  <body class="bg-dark">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card" style="--bs-card-border-color: none; border-radius: 5px; overflow: hidden;">
            <div class="card-body">
              <h1 class="card-title text-center">Login</h1>
              <% if (error) { %>
              <p class="text-danger text-center"><%= error %></p>
              <% } %>
              <form action="/login" method="post">
                <div class="mb-3">
                  <label for="username" class="form-label">Username:</label>
                  <input
                    type="text"
                    name="username"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password:</label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <!-- Add a button for toggling dark mode -->
                <button type="button" id="toggleDarkMode" class="btn btn-secondary">Toggle Dark Mode</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    const toggleDarkModeButton = document.getElementById('toggleDarkMode');
    const body = document.body;

    toggleDarkModeButton.addEventListener('click', () => {
        body.classList.toggle('bg-light');
        body.classList.toggle('bg-dark');
    });
</script>
</html>
