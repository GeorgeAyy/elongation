<!-- views/leaderboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Leaderboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel = "stylesheet" href = "../css/leaderboard.css">
</head>
<body>

    <div class="container leaderboard-container">
        <h1 class="leaderboard-header">Leaderboard</h1>

        <ul class="list-group leaderboard-list">
            <% leaderboard.forEach((entry, index) => { %>
                <li class="list-group-item leaderboard-item">
                    <span><%= index + 1 %>. <%= entry.name %></span>
                    <span class="badge badge-primary badge-pill"><%= entry.totalPushups %> push-ups</span>
                </li>
            <% }); %>
        </ul>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-eA7CfeJAOy6kUn6YzwnJH2pL7UnDF2B+9ujMAeTOM7bNHL1zAPK3QGS9hYQ2wbqR" crossorigin="anonymous"></script>
</body>
</html>
